<UserControl x:Class="MangaChecker.Adding.NormalAddDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MangaChecker.Adding"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:MangaChecker.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance {x:Type viewModel:NormalAddViewModel}, IsDesignTimeCreatable=False}"
             Width="400" TextElement.Foreground="{DynamicResource MaterialDesignBody}"

             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Label>Normal</Label>
        </materialDesign:ColorZone>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10, 0">
            <TextBox Width="300" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     ToolTip="Link" Text="{Binding Link, Mode=TwoWay}" />
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding SearchCommand}">SEARCH</Button>
        </StackPanel>
        <ProgressBar Grid.Row="2" Style="{StaticResource MaterialDesignCircularProgressBar}" IsIndeterminate="True"
                     Visibility="{Binding Progressbar}" Margin="0,10" />
        <TextBlock Grid.Row="2" Visibility="{Binding InfoVisi}" Text="{Binding InfoLabel}" TextWrapping="Wrap"
                   Margin="0,10" />
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="10, 0">
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding AddCommand}"
                    Visibility="{Binding AddButtonVisibility}">
                ADD
            </Button>
            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                CANCEL
            </Button>
        </StackPanel>
    </Grid>
</UserControl>